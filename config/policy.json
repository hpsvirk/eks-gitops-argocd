{
    "Version": "2012-10-17",
    "Statement":
    [
        {
            "Sid": "PushImage",
            "Effect": "Allow",
            "Action":
            [
                "ecr:DescribeRepositories",
                "ecr:PutImage",
                "ecr:InitiateLayerUpload",
                "ecr:UploadLayerPart",
                "ecr:CompleteLayerUpload",
                "ecr:TagResource",
                "ecr:UntagResource",
                "ecr:ListTagsForResource"
            ],
            "Resource": "arn:aws:ecr:${AWS_REGION}:${ACCOUNT_ID}:repository/eks-gitops-argocd"
        }
    ]
}